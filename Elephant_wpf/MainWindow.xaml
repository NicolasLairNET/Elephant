<Window x:Class="Elephant_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elephant_wpf"
        mc:Ignorable="d"
        Title="Elephant" Height="400" Width="600" ResizeMode="NoResize">
    <Grid Background="#FF174489">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" Orientation="Horizontal">
            <Border  BorderBrush="White" Margin="5,0,0,0" Height="34" Width="auto" CornerRadius="6" Background="White">
                <TextBox x:Name="txtName" Width="225" Height="34" FontSize="20" BorderBrush="{x:Null}" Background="Transparent" VerticalAlignment="Center"/>
            </Border>

            <Border  BorderBrush="White" Height="34" Width="auto" Margin="5" CornerRadius="6" Background="White">
                <Button x:Name="btnSearch" Width="30" Height="auto" Background="Transparent" FontFamily="Calibri Light" BorderBrush="{x:Null}">
                    <Image Margin="0"  Height="auto" Width="auto" Source="/loupe.jpg"/>
                </Button>
            </Border>

        </StackPanel>

        <DataGrid Grid.Row="1" Grid.ColumnSpan="3" AutoGenerateColumns="False" Height="auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom du point" Width="auto"/>
                <DataGridTextColumn Header="Paramètres" Width="auto"/>
                <DataGridHyperlinkColumn Header="Valeur" Width="auto"/>
                <DataGridCheckBoxColumn Header="Origine" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>
        

    </Grid>
</Window>
