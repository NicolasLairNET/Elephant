<Window x:Class="Elephant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Elephant.Views"
        xmlns:local="clr-namespace:Elephant"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Elephant" Height="600" Width="800" ResizeMode="CanResizeWithGrip" MinHeight="600" MinWidth="800">

    <Grid Background="{StaticResource MainColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--<views:TdcTagView/>-->
        <ContentControl Grid.Row="0" Content="{Binding SelectedViewModel}"/>

    </Grid>
</Window>
